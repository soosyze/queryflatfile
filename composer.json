{
    "name": "soosyze/queryflatfile",
    "description": "The Queryflatfile is PHP library for simple database not SQL",
    "type": "library",
    "keywords": ["php", "library", "php-library", "nosql", "db", "database", "flat file", "db flat file", "query-builder", "composer"],
    "license": "MIT",
    "authors": [
        {
            "name": "Mathieu NOÃ‹L",
            "email": "mathieu@soosyze.com",
            "homepage": "http://mathieu-noel.fr"
        }
    ],
    "support": {
        "email": "mathieu@soosyze.com"
    },
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "phparkitect/phparkitect": "^0.3.25",
        "phpstan/phpstan": "^1.9",
        "phpstan/phpstan-phpunit": "^1.3",
        "phpunit/phpunit": "^9.6",
        "rector/rector": "^0.16",
        "soosyze/php-cs-fixer-config": "^1.0"
    },
    "suggest": {
        "phpdocumentor/phpdocumentor": "To generate documentation.",
        "phpmetrics/phpmetrics": "To generate a code status report in HTML format."
    },
    "autoload": {
        "psr-4": {
            "Soosyze\\Queryflatfile\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Soosyze\\Queryflatfile\\Tests\\": "tests"
        }
    },
    "config": {
        "bin-dir": "bin",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
